#!/bin/bash

remote=`[ $1 ] && echo -n $1 || echo -n heroku`

find airborn marketplace firetext | grep \\.git[^/]*$ | sed -e 'p;s/.git/_git/' | xargs -n2 mv &&
git add -A airborn marketplace firetext &&
find airborn marketplace firetext | grep _git[^/]*$ | xargs git reset HEAD &&
git commit -qm "Update airborn" &&
find airborn marketplace firetext | grep _git[^/]*$ | sed -e 'p;s/_git/.git/' | xargs -n2 mv &&
(
	git push -qf $remote master
	git reset -q HEAD^
)